{
  "name": "ms-bussiness-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "test": "node ace test",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "@adonisjs/bodyparser": "^10.1.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/fold": "^10.2.1",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/repl": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "luxon": "^3.7.2",
    "mysql2": "^3.15.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.14",
    "socket.io": "^4.8.1",
    "source-map-support": "^0.5.21",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@types/luxon": "^3.7.1",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.5",
    "pino-pretty": "^10.3.1",
    "prettier": "^2.8.8",
    "typescript": "^5.9.3"
  }
}
